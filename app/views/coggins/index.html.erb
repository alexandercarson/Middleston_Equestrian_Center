
<br />
<div class="text-center">
<%= link_to "Add New Coggins Report", new_coggin_path %>
<!-- class: "btn btn-lg btn-primary text-center" %> -->
</div>
<br />
<br />

<table class = "table table-dark table-striped table-hover text-center">
   <thead>
      <tr>
         <th>Horse ID:</th>
         <th>Horse Name: </th>
         <th>Download Link: </th>
         <th>Delete Record?</th>
      </tr>
   </thead>
   <tbody>
      <% @coggins.each do |coggin| %>
         <tr>
            <td># <%= coggin.horse_id %> </td>
            <td><%= coggin.horse.try(:barn_name) %></td>
            <td><%= link_to "Download Coggins Report", coggin.coggin_url, class: "btn btn-outline-primary" %> </td>
            <td><%= button_to "Delete",  coggin, method: :delete, class: "btn btn-outline-danger", confirm: "Are you sure that you wish to delete #{coggin.id}?" %></td>
         </tr>

      <% end %>
   </tbody>

</table>