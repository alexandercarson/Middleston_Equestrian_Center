<br>
<div class="container h-100">
      <div class="row h-100 justify-content-center align-items-center">
          <div class="card " style="width: 40rem;">
            <h4 class="card-header text-center"> <Strong>Farrier Name: </strong> <%= @farrier.name  %></h4>
              <div class="card-body text-center">
                <p class="card-text"><Strong>Phone Number: </strong><%= @farrier.phone_number %></p>
                <p class="card-text"><Strong>Address: </strong><%= @farrier.address %></p>
                <p class="card-text"><Strong>City: </strong><%= @farrier.city %>, <%= @farrier.state %> <%= @farrier.zip_code %></p>

                <hr>
                <% if current_user.admin? %>
                  <p>
                    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                      Edit Farrier
                    </button>
                  </p>
                  <div class="collapse" id="collapseExample">
                    <div class="card card-body">
                    <%= render template: 'farriers/edit' %>
                    </div>
                  </div>
                <% end %>
              </div>
          </div>
      </div> 
</div>
  